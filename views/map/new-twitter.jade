extends ../layout

block content
  if user && typeof(user.twitter) != 'undefined' && user.twitter

    form.form-horizontal(id='inline-map-form-verified', method='POST')
      input(type='hidden', name='_csrf', value=token)
      input(type='hidden', name='mapverified', value='true')
      input(type='hidden', name='mapfromtype', value='twitter')
      input(type='hidden', name='mapfromaddress', value=screenname)  

      legend Create a VERIFIED TWITTER address mapping
      .form-group
        label.col-sm-3.control-label(for='mapfromtype') Map From Type
        .col-sm-7
          | Twitter

      .form-group
        label.col-sm-3.control-label(for='mapfromaddress') Address
        .col-sm-7
          | @#{screenname}

      .col-sm-3.control-label 
      .col-sm-7 
        p 
          b To

      .form-group
        label.col-sm-3.control-label(for='maptotype') Map To Type
        .col-sm-7
          select.form-control(name='maptotype', id='maptotype', autofocus)
            option Bitcoin
            option Dogecoin
            option Litecoin     
      .form-group
        label.col-sm-3.control-label(for='maptoaddress') Wallet Address
        .col-sm-7
          input.form-control(type='text', name='maptoaddress', id='maptoaddress', placeholder='Wallet Address')
      .form-group
        .col-sm-offset-3.col-sm-7
          button.btn.btn-success(type='submit')
            i.fa.fa-check
            | Create Mapping

